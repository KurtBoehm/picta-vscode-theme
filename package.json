{
  "name": "picta-vscode-theme",
  "displayName": "Picta Theme",
  "description": "Picta theme for VS Code",
  "version": "1.0.0",
  "publisher": "KurtBoehm",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1b1f23",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KurtBoehm/picta-vscode-theme"
  },
  "bugs": {
    "url": "https://github.com/KurtBoehm/picta-vscode-theme/issues"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "github",
    "light",
    "dark",
    "protanopia",
    "colorblind"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Picta Light",
        "uiTheme": "vs",
        "path": "./themes/light.json"
      },
      {
        "label": "Picta Light Extended",
        "uiTheme": "vs",
        "path": "./themes/light-ex.json"
      },
      {
        "label": "Picta Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "Picta Dark Extended",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-ex.json"
      }
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.17.0",
    "@primer/primitives": "7.10.0",
    "@types/chroma-js": "^3.1.1",
    "chroma-js": "^2.1.2",
    "color": "^3.1.2",
    "tsx": "^4.20.3",
    "vsce": "^1.100.1"
  },
  "scripts": {
    "start": "tsx watch src src/index.ts",
    "build": "npx tsx src/index.ts && mkdir -p build",
    "package": "vsce package -o ./build/picta-vscode-theme.vsix",
    "prepublishOnly": "npm run build && vsce publish",
    "release": "changeset publish"
  },
  "__metadata": {
    "publisherDisplayName": "Kurt BÃ¶hm"
  },
  "publishConfig": {
    "access": "public"
  }
}
